<project name="jms-binding" default="run" basedir=".">

  <property name="class.dir" value="classes"/>

  <target name="clean">
    <delete dir="target" quiet="true"/>
    <delete dir="${class.dir}" quiet="true"/>
  </target>

  <target name="init">
    <mkdir dir="${class.dir}"/>
    <mkdir dir="src/ddl"/>
    <mkdir dir="install"/>
    <mkdir dir="deploy"/>

    <path id="javac.classpath">
      <pathelement path="${class.dir}"/>
      <pathelement path="../../conf"/>
      <fileset dir="../../lib">
        <include name="**/*.jar"/>
      </fileset>
    </path>
  </target>
  
  <target name="setup" depends="init">
    <get src="http://repo.logicblaze.com/maven1/org.apache.servicemix.pxe/jars/pxe-install.jar" 
         dest="install/pxe-install.jar"
         usetimestamp="true"
         verbose="true"/>
    <get src="http://repo.logicblaze.com/maven1/org.apache.servicemix.pxe/jars/AsyncProcess-sa.jar" 
         dest="deploy/AsyncProcess-sa.jar"
         usetimestamp="true"
         verbose="true"/>
  </target>

  <target name="compile" depends="init" description="Compile all Java">
    <javac srcdir="." destdir="${class.dir}">
      <classpath refid="javac.classpath"/>
    </javac>
  </target>

  <target name="run" depends="compile" description="Runs the example client">
    <echo>Running exsample client</echo>
    <java classname="JMSClient" fork="yes" maxmemory="100M">
      <classpath refid="javac.classpath"/>
    </java>
  </target>
	
</project>
