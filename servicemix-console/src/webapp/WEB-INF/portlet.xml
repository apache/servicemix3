<?xml version="1.0" encoding="UTF-8"?>
<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <description>Portlet for managing ServiceMix.</description>
        <portlet-name>JBIContainer</portlet-name>
        <display-name>JBI Container Portlet</display-name>

        <portlet-class>org.apache.servicemix.console.JBIContainerPortlet</portlet-class>

        <expiration-cache>-1</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>

        <portlet-info>
            <title>JBI Container</title>
            <short-title>JBI Container</short-title>
            <keywords>JBI, Container</keywords>
        </portlet-info>
    </portlet>
    <portlet>
        <description>ServiceMix audit tool.</description>
        <portlet-name>JBIAudit</portlet-name>
        <display-name>JBI Audit Portlet</display-name>

        <portlet-class>org.apache.servicemix.console.JBIAuditPortlet</portlet-class>

        <expiration-cache>-1</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>

        <portlet-info>
            <title>JBI Audit</title>
            <short-title>JBI Audit</short-title>
            <keywords>JBI, Audit</keywords>
        </portlet-info>
    </portlet>
    <portlet>
        <description>ServiceMix components management.</description>
        <portlet-name>JBIComponents</portlet-name>
        <display-name>JBI Components Portlet</display-name>

        <portlet-class>org.apache.servicemix.console.JBIComponentsPortlet</portlet-class>

        <expiration-cache>-1</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>

        <portlet-info>
            <title>JBI Components</title>
            <short-title>JBI Components</short-title>
            <keywords>JBI, Components</keywords>
        </portlet-info>
    </portlet>
 </portlet-app>
