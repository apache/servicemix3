<project default="default"
         xmlns:j="jelly:core"
         xmlns:u="jelly:util"
         xmlns:ant="jelly:ant"
         xmlns:maven="jelly:maven">

  
  <postGoal name="eclipse">
    <touch file="${maven.repo.local}/servicemix/jars/${pom.artifactId}-${pom.currentVersion}.jar"/>
  </postGoal>
  
  <!-- Public goals -->
  <goal name="default" prereqs="build"/>
  <goal name="rebuild" prereqs="clean, default"/>
  <goal name="nightly" prereqs="rebuild, deploy"/>
  
  <goal name="build">
    <j:set var="multiprojectType" value="${maven.multiproject.type}"/>
    <j:if test="${multiprojectType == 'jar' || multiprojectType == null}">
      <attainGoal name="jar:install" />
    </j:if>
    <j:if test="${multiprojectType == 'jbi'}">
      <attainGoal name="build-jbi" />
    </j:if>
    <j:if test="${multiprojectType == 'war'}">
      <attainGoal name="war:install" />
    </j:if>
    <j:if test="${multiprojectType == 'plugin'}">
      <attainGoal name="plugin:repository-install" />
      <attainGoal name="plugin:install-now" />
    </j:if>
  </goal>
  <goal name="build-jbi" prereqs="jar:install,jbi:install"/>
  <goal name="deploy">
    <j:set var="multiprojectType" value="${maven.multiproject.type}"/>
    <j:if test="${multiprojectType == 'jar' || multiprojectType == null}">
      <attainGoal name="jar:deploy" />
    </j:if>
    <j:if test="${multiprojectType == 'jbi'}">
      <attainGoal name="jar:deploy" />
      <attainGoal name="jbi:deploy" />
    </j:if>
    <j:if test="${multiprojectType == 'war'}">
      <attainGoal name="war:deploy" />
    </j:if>
    <j:if test="${multiprojectType == 'plugin'}">
      <attainGoal name="plugin:repository-deploy" />
    </j:if>
  </goal>

  <postGoal name="clean:clean">
    <delete failonerror="false" dir="ActiveMQ"/>
    <delete failonerror="false" dir="ServiceMixWDir"/>
    <delete failonerror="false" dir="rootDir"/>
    <delete failonerror="false" dir="testWDIR"/>
    <delete failonerror="false" dir="testWDR"/>
  </postGoal>
    <j:set var="project.root" value="${pom.parentBasedir().getParentFile().getCanonicalFile()}"/>

    <!-- Build failure reports: initialize compile result to fail -->
    <preGoal name="java:compile">
        <j:set var="generateBuildReports" value="${buildreport.generate}"/>
        <j:if test="${generateBuildReports == 'true'}">
            <attainGoal name="build-failure-report:set-compile-fail"/>
        </j:if>
    </preGoal>
    <!-- Build failure reports: initialize test result to fail -->
    <preGoal name="test:test">
        <j:if test="${generateBuildReports == 'true'}">
            <attainGoal name="build-failure-report:set-test-fail"/>
            <!-- Build failure reports: ignore failures so test failures can be 
            checked (postGoal not run if tests fail) -->
            <j:set var="maven.test.failure.ignore" value="true"/>
        </j:if>
    </preGoal>
    <!-- Build failure reports: write test results. Set build to success if no 
    test failures  -->
    <postGoal name="test:test">
        <j:if test="${generateBuildReports == 'true'}">
            <attainGoal name="build-failure-report:set-test-results"/>
	    <!-- Build failure reports: manually fail since failures are ignored
            -->
            <j:if test="${maven.test.failure}">
                <fail message="There were test failures."/>
            </j:if>
        </j:if>
    </postGoal> 
</project>
