<project
    xmlns:j="jelly:core"
    xmlns:util="jelly:util"
    xmlns:x="jelly:xml"
    xmlns:ant="jelly:ant"
    xmlns:doc="doc"
    xmlns:maven="jelly:maven">
    
    <preGoal name="java:compile">
    </preGoal>
    
    <goal name="default">
        <attainGoal name="dist:izpack-jar-installer"/>
    </goal>
    
    <goal name="dist:izpack-jar-installer"
          description="Generate a IzPack platform independent distributiion installer jar.">
        <attainGoal name="validateBinAssembly"/>
        <attainGoal name="izpack:configure"/>
        <attainGoal name="izpack:jar-installer"/>
    </goal>
    
    <!-- Validates if there is -->
    <goal name="validateBinAssembly" description="validates if distribution has been created. If not then it will throw an exception.">
        <util:file var="assemblyDir" name="${maven.dist.bin.assembly.dir}" />
        <j:if test="${!assemblyDir.exists()}">
          <fail>Unable to find the distribution build. Please execute first the default or dist:build-bin in servicemix-assembly module.</fail>
        </j:if>
    </goal>	
</project>